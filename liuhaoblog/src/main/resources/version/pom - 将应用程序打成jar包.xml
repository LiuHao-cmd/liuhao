<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.liuhao.blog</groupId>
    <artifactId>liuhao.blog</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>刘浩的博客</name>
    <!--项目的组织-->
    <organization>
        <name>liuhao</name>
        <url>http://www.liuhao.com</url>
    </organization>
    <properties>
        <version.maven-surefire-plugin>2.4.2</version.maven-surefire-plugin>
        <version.maven-install-plugin>2.5.1</version.maven-install-plugin>
    </properties>
    <dependencies>
        <!--web模块-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <version>2.3.1.RELEASE</version>
        </dependency>
        <!--自动装配-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-autoconfigure</artifactId>
            <version>2.3.1.RELEASE</version>
        </dependency>
    </dependencies>
        <!--应用程序打成jar包-->
        <build>
            <finalName>${project.artifactId}</finalName>
            <plugins>
                <!--忽略Junit代码-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${version.maven-surefire-plugin}</version>
                    <configuration>
                        <skipTests>true</skipTests>
                    </configuration>
                </plugin>
                <!--主动检测主类，并将应用打包成一个可执行的jar包-->
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <!--configuration这里写上main方法所在类的路径,如果不写也会自动检测主类-->
                    <configuration>
                        <mainClass>com.liuhao.blog.BlogApplication</mainClass>
                    </configuration>
                    <executions>
                        <execution>
                            <goals>
                                <goal>repackage</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <!--安装你指定的文件到本地仓库,这里忽略-->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${version.maven-install-plugin}</version>
                    <configuration>
                        <skip>true</skip>
                    </configuration>
                </plugin>
            </plugins>
        </build>
</project>